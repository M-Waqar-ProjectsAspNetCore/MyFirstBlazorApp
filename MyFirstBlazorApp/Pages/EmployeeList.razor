@page "/employees"

@inherits EmployeeListBase

<h3>Employee List</h3>
<h3>Selected Employee Count Is : @SelectedEmployee</h3>
<input type="checkbox" @bind="@ShowFooter" /> Show Footer
@if (Employees == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="card-deck">
        @foreach (var employee in Employees)
        {
            <DisplayEmployee employee="employee" ShowFooter="ShowFooter" 
            EmployeeSelected="EmployeeSelected" OnEmployeeDeleted ="EmployeeDeleted">

            </DisplayEmployee>
        }
    </div>
}

