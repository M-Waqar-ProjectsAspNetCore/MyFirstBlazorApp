@page "/mycounter"

<h3>My Counter</h3>

<br />
<br />
<button @onclick="IncrementClick" class="btn btn-primary">Increment</button>
<button @onclick="DecrementClick" class="btn btn-primary">Decrement</button>
<br />
<br />
<h4>Counter Value: @count</h4>

@code {
    public int count = 0;

    public void IncrementClick()
    {
        count = count + 1;
    }

    public void DecrementClick()
    {
        count = count - 1;
    }
}
